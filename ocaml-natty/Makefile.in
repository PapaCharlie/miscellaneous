PROGNAME := ocaml-natty
DISTFILES := CHANGES COPYING Makefile.in README \
	bootstrap configure configure.ac \
	src/*.ml src/*.mli src/Makefile.in src/META.in \
	src/OCamlMakefile examples/Makefile examples/OCamlMakefile \
	examples/*.ml
VERSION = @VERSION@

all clean install uninstall:
	$(MAKE) -C src $@

distclean: clean
	rm -rf doc

doc:
	make -C src htdoc
	mkdir -p doc
	rm -rf doc/html
	mv src/doc/natty/html doc
	rm -rf src/doc

dist:
	rm -rf $(PROGNAME)-$(VERSION)
	mkdir $(PROGNAME)-$(VERSION)
	cp -r --parents $(DISTFILES) $(PROGNAME)-$(VERSION)
	tar zcvf ../$(PROGNAME)-$(VERSION).tar.gz $(PROGNAME)-$(VERSION)
	rm -rf $(PROGNAME)-$(VERSION)

.PHONY: dist doc

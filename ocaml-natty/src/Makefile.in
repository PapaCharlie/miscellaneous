OCAMLMAKEFILE = OCamlMakefile

OCAMLFIND = @OCAMLFIND@
REAL_OCAMLFIND = $(OCAMLFIND)
OCAML_DEP_PACKAGES = -package bitstring,bitstring.syntax -syntax bitstring.syntax
OCAML_FIND_PACKAGES = $(OCAML_DEP_PACKAGES) -linkpkg
OCAMLFIND_LDCONF = @OCAMLFIND_LDCONF@
BEST = @BEST@
OCAMLC = ocamlc
OCAMLOPT = ocamlopt
OCAMLMKTOP = ocamlmktop
OCAMLCP = ocamlcp
OCAMLDEP = ocamldep
OCAMLDOC = ocamldoc

SOURCES = natty.ml natty.mli
RESULT = natty
OCAMLDOCFLAGS = -stars
LIBINSTALL_FILES = $(wildcard *.mli *.cmi *.cma *.cmxa *.cmx *.a *.so)
OCAMLDOCFLAGS = -I `ocamlfind -query bitstring`
NO_CUSTOM = yes

all: $(BEST)

byte: byte-code-library

opt: native-code-library

install: libinstall

uninstall: libuninstall

update: uninstall install

-include $(OCAMLMAKEFILE)
